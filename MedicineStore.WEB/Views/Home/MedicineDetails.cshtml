
@{
    ViewData["Title"] = "MedicineDetails";
}

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Image</span>
        </h4>
        
        <div>
            <img class="card-img-top" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/default-pro.jpg" : Model.ImageUrl)" alt="@Model.Name">
        </div>
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Medicine details</h4>
            <div class="mb-3">
                <label for="name">Name:</label>
                <div class="input-group">
                    @Model.Name
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="grossPrice">Gross Price</label>
                    @Model.GrossPrice.ToString("F") zł
                </div>
                <div class="col-md-6 mb-3">
                    <label for="specialPrice">Special price</label>
                    @Model.SpecialGrossPrice.ToString("F") zł
                </div>
            </div>
            <div class="mb-3">
                <label for="name">Description</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                    </div>
                    @Model.Description
                </div>
            </div>

            <a href="@Url.Action("Index")"><button class="btn btn-primary btn-lg btn-block" type="button">Return</button></a>
    </div>
</div>
